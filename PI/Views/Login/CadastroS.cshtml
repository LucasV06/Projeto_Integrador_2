﻿@{
    Layout = "_LayoutDeslogado";
}

<h3 style="text-align:center"><u>Faça seu CADASTRO!</u></h3>
@*<form class="row g-3" asp-controller="Aluno" asp-action="InserirAluno" method="post">*@
<form class="row g-3">
    <div class="col-md-6">
        <label for="inputNome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="inputNome">
    </div>
    <div class="col-md-6">
        <label for="inputCep" class="form-label">CEP</label>
        <input type="text" class="form-control" id="inputCep" placeholder="00000-000" minlength="8" maxlength="9">
    </div>
    <div class="col-12">
        <label for="inputCpf" class="form-label">CPF</label>
        <input type="text" class="form-control" id="inputCpf" placeholder="000.000.000-00" minlength="11" maxlength="14">
    </div>
    <div class="col-12">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="seuemail222@host.com">
    </div>
    <div class="col-md-6">
        <label for="inputSenha" class="form-label">Senha</label>
        <input type="password" class="form-control" id="inputSenha">
    </div>
    <div class="col-md-4">
        <label for="inputDate" class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" id="inputDate" placeholder="Seu nascimento">
    </div>
    <div class="col-md-2">
        <label for="inputZip" class="form-label">Código Sócio</label>
        <input type="number" class="form-control" id="inputZip">
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Mostrar
            </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>

    <div class="d-grid gap-2 d-md-block">
        <a type="submit" class="btn btn-primary" role="button" asp-controller="Login" asp-action="Index"> Voltar</a>
    </div>

</form>

