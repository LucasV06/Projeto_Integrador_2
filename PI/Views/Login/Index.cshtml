﻿@{
    Layout = "_LayoutDeslogado";
}

@if (TempData["MsgSucesso"] != null)
{
    <div class="alert-success">
        @TempData["MsgSucesso"]
    </div>
}

@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}

@model Login


<style>
    .margemTop {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .margemTopFilho {
        margin-top: 25px;
    }
</style>



<form class="row g-3" asp-controller="Login" asp-action="BuscarLogin">
    <div class="d-flex justify-content-center">

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
            <label class="form-check-label" for="inlineRadio1">Socio</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
            <label class="form-check-label" for="inlineRadio2">Dependente</label>
        </div>
    </div>


    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3">
        </div>
    </div>

    @*        <div class="d-flex justify-content-center">
    <button class="btn btn-primary" role="button">Entrar</button>
    </div>*@

    <div class="col-12 justify-content-center" style="text-align:center">
        <button class="btn btn-primary btn-xsm" role="button">Entrar</button>
    </div>
    <div class=" d-flex justify-content-center" style="margin-top:10px">
        <p>Esqueceu a senha?<a asp-action="RedefinirSenha" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Redefina aqui!</a></p>
    </div>

    <div class="d-flex justify-content-center">
        <p>Não é cadastrado?<a asp-action="cadastroS" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Cadastre-se aqui!</a></p>
    </div>

</form>
