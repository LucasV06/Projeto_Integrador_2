﻿@{
    ViewData["Title"] = "Contato";
}
<body>
    <h1>Contato</h1>
    <h5 class="subtexto">Outros contatos</h5>

    <div class="col-10">
        <label for="Nome">Nome:</label>
    </div>
    <div class="col-75">
        <input name="Nome" type="text" maxlength="30" placeholder="Informe-nos o seu nome (campo obrigatório)" required />
                <button class="Bwhatsapp" name="whatsapp" onclick="location.href='https://api.whatsapp.com/send/?phone=5547988089000&text&type=phone_number&app_absent=0'"><img class="Whatsapp" src="https://seeklogo.com/images/W/whatsapp-logo-8AE44BBBB0-seeklogo.com.png" /></button>
        <a class="Bwhatsapp" href="https://api.whatsapp.com/send/?phone=5547988089000&text&type=phone_number&app_absent=0">Whatsapp</a>
    </div>
    <div class="col-10">
        <label for="Email">Email:</label>
    </div>
    <div class="col-75">
        <input name="Email" class="Email" type="text" placeholder="(campo obrigatório)" />
                <button class="BInstagram" name="instagram" onclick="location.href='https://www.instagram.com/senacbrusque/'"><img class="Instagram" src="https://img.freepik.com/vetores-premium/icone-do-aplicativo-instagram-logotipo-da-midia-social-ilustracao-em-vetor_277909-403.jpg" /></button>
        <a class="BInstagram" href="https://www.instagram.com/senacbrusque/">Instagram</a>
    </div>


    <div class="col-10">
        <label for="Assunto">Assunto:</label>
    </div>
    <div class="col-75">
        <input name="Assunto" type="text" placeholder="(Assunto que deseja discutir)" required/>
            
        <button class="Bfacebook" onclick="location.href='https://www.facebook.com/SenacSC'"><img class="Facebook" src="https://logopng.com.br/logos/facebook-13.png" /></button>
        <a class="Bfacebook" href=“https://www.facebook.com/SenacSC”>Facebook</a>

    </div>
    

    <div class="col-10">
        <label for="obs">Mensagem:</label>
    </div>
    <div class="col-75">
        <textarea id="obs" name="obs" rows="6" maxlength="1000" placeholder="Escreva sua mensagem..." required></textarea>
          

                   <button class="Bmaps" onclick="location.href='https://maps.app.goo.gl/chzou8mZsAcD6LZW7'"><img class="Maps" src="https://play-lh.googleusercontent.com/Kf8WTct65hFJxBUDm5E-EpYsiDoLQiGGbnuyP6HBNax43YShXti9THPon1YKB6zPYpA" /></button>
        <a class="Bmaps" href="https://maps.app.goo.gl/chzou8mZsAcD6LZW7">Maps</a>


    </div>

   
        
        <div style="align-content:flex-end">
                    <a type="submit" class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Mensagem">Enviar</a>
    </div>

